<resources>
    <!-- Common Screen Style -->

    <style name="Theme.AppCompat.Translucent.NoTitleBar" parent="Theme.MaterialComponents.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.TerminalMobileAndroid" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorControlActivated">@color/teal_200</item>
        <item name="colorControlNormal">@color/teal_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:statusBarColor">@color/teal_200</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="Theme.RavenDspread.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RavenDspread.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>