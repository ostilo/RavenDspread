<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
 <LinearLayout
     android:id="@+id/closeBtn"
     android:background="@color/white"
     android:orientation="horizontal"
     android:layout_gravity="end"
     android:layout_marginTop="@dimen/dp_20"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
     <ImageButton
         android:id="@+id/btnCloseSheet"
         android:layout_width="@dimen/dp_40"
         android:layout_height="@dimen/dp_40"
         android:layout_gravity="end"
         android:alpha="0.5"
         android:contentDescription="@string/connect_bluetooth"
         android:background="@drawable/close_background"
         android:padding="@dimen/dp_5"
         android:src="@drawable/close"
         app:tint="@color/white" />
     <TextView
         android:text="@string/close"
         android:layout_marginEnd="@dimen/dp_20"
         android:layout_marginStart="@dimen/dp_10"
         android:gravity="center_horizontal"
         android:layout_width="wrap_content"
         android:textColor="@color/primary_color"
         android:textSize="@dimen/sp_15"
         android:fontFamily="@font/br_black"
         android:textStyle="bold"
         android:layout_gravity="center_vertical"
         android:layout_height="wrap_content"
         />
 </LinearLayout>
 <LinearLayout
       android:visibility="visible"
       android:id="@+id/posTranParent"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="80dp"/>
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="250dp">

           <pl.droidsonroids.gif.GifImageView
               android:id="@+id/spinKit"
               android:layout_width="match_parent"
               android:scaleType="centerInside"
               android:layout_margin="20dp"
               android:layout_height="match_parent"
               android:layout_gravity="center_vertical"
               />
       </FrameLayout>
       <TextView
           android:padding="@dimen/fab_margin"
           android:id="@+id/pos_view_update"
           android:textStyle="bold"
           android:textSize="18sp"
           android:fontFamily="@font/proxima_nova_bold"
           android:gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
   </LinearLayout>
  <LinearLayout
        android:layout_marginBottom="@dimen/dp_30"
        android:visibility="gone"
        android:id="@+id/posPinParent"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        >
        <include
            android:visibility="gone"
            layout="@layout/custom_toolbar"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/card_pin"
                android:layout_marginEnd="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/sp_20"
                android:fontFamily="@font/br_bold"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="@string/give_the_user_your_device"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/pass_toggle"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/br_medium"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/pin_card_bg"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:padding="@dimen/sp_18"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/amountText"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pinOne"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/pin_circle"
                android:textSize="@dimen/sp_10"
                />
            <TextView
                android:id="@+id/pinTwo"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/pin_circle"
                android:textSize="@dimen/sp_10"
                />
            <TextView
                android:id="@+id/pinThree"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/pin_circle"
                android:textSize="@dimen/sp_10"
                />
            <TextView
                android:id="@+id/pinFour"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/pin_circle"
                android:textSize="@dimen/sp_10"
                />

        </LinearLayout>
        <com.ravenpos.ravendspreadpos.pos.customui.KeyPad
            android:id="@+id/keyPad"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="@integer/weight_1"
            android:layout_marginBottom="@dimen/dp_40"
            />
        <Button
            android:id="@+id/btnContinuePin"
            style="@style/my_button"
            android:layout_marginTop="@dimen/dp_30"
            android:elevation="@dimen/dp_0"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:textSize="@dimen/sp_12"
            android:layout_marginEnd="@dimen/dp_30"
            android:fontFamily="@font/br_medium"
            android:background="@drawable/button_background"
            android:text="@string/proceed" />
        <TextView
            android:text="@string/powered_by_raven"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/br_bold"
            android:background="@drawable/grey_bluetooth"
            android:textStyle="bold"
            android:padding="@dimen/dp_8"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
 <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="@color/white"
        android:id="@+id/posBluetoothParent"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout

            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/connect_bluetooth"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/sp_20"
                android:fontFamily="@font/br_black"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:contentDescription="@string/connect_bluetooth"
                android:layout_marginTop="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_bluetooth"
                android:src="@drawable/baseline_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/searching_for_device"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@font/br_bold"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_1"

                />
            <TextView
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/available_connections"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_width="wrap_content"
                android:textColor="@color/pass_toggle"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@font/br_medium"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:background="@drawable/radio_bluetooth"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:stackFromEnd="true"
                    app:reverseLayout="true"
                    android:scrollbars="none"
                    tools:itemCount="@integer/weight_1"
                    tools:listitem="@layout/device_list_item"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/btnContinueBlue"
                style="@style/my_button"
                android:elevation="@dimen/dp_0"
                app:backgroundTint="@null"
                android:layout_marginStart="@dimen/dp_15"
                android:textAllCaps="false"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@font/br_medium"
                android:background="@drawable/button_background"
                android:layout_margin="@dimen/medium"
                android:text="@string/connect_to_device" />

            <TextView
                android:text="@string/powered_by_raven"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@font/br_bold"
                android:background="@drawable/grey_bluetooth"
                android:textStyle="bold"
                android:padding="@dimen/dp_8"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>