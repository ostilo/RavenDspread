<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:background="@drawable/check_rate_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnCloseSheet"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="end"
            android:alpha="0.5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/close_background"
            android:padding="@dimen/dp_5"
            android:src="@drawable/close"
            app:tint="@color/black" />

        <ImageView
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:src="@drawable/cancel_caution"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:text="Purchase"
            android:textSize="@dimen/sp_18"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_20"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtKsg"
            android:layout_width="wrap_content"
            android:text="OTP Permission Not Enabled"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/proxima_nova_bold"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDonCancel"
            style="@style/material_button"
            app:backgroundTint="@null"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:text="@string/btnContinue"
            />
    </LinearLayout>

</FrameLayout>