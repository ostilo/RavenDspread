<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    >
    <include
        layout="@layout/custom_toolbar"/>
    <LinearLayout
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_height="wrap_content">
        <TextView
            android:text="Card PIN"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/sp_20"
            android:fontFamily="@font/br_black"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="@string/give_the_user_your_device"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/pass_toggle"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/br_medium"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/pin_card_bg"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:padding="@dimen/sp_18"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/pin_circle_checked"
            android:textSize="@dimen/sp_10"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/pin_circle"
            android:textSize="@dimen/sp_10"
            />

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/pin_circle"
            android:textSize="@dimen/sp_10"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/pin_circle"
            android:textSize="@dimen/sp_10"
            />


    </LinearLayout>
    <com.ravenpos.ravendspread.KeyPad
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="@integer/weight_1"
        android:layout_marginBottom="@dimen/dp_40"
        />
    <Button
        android:id="@+id/btnContinue"
        style="@style/my_button"
        android:layout_marginTop="@dimen/dp_30"
        android:elevation="@dimen/dp_0"
        app:backgroundTint="@null"
        android:enabled="false"
        android:layout_marginStart="@dimen/dp_30"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_12"
        android:layout_marginEnd="@dimen/dp_30"
        android:fontFamily="@font/br_medium"
        android:background="@drawable/button_background"
        android:layout_margin="@dimen/medium"
        android:text="@string/proceed" />
    <TextView
        android:text="@string/powered_by_raven"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_12"
        android:fontFamily="@font/br_bold"
        android:background="@drawable/grey_bluetooth"
        android:textStyle="bold"
        android:padding="@dimen/dp_8"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        />
</LinearLayout>
